{{> _topbar }}

<div class="container list">
  <h2 class="list-title"> {{ list.title }} </h2>
  <div class="toolbar">
    <span class="metric">
        <i class="glyphicon glyphicon-shopping-cart"></i> {{ products.length }}
    </span>
    <span class="metric">
      <i class="glyphicon glyphicon-user"></i> {{ list.n_users }}
    </span>
    <span class="metric date">
      <i class="glyphicon glyphicon-calendar"></i> {{ list.date }}
    </span>
    <button class="btn btn-info pull-right share-button"><i class="glyphicon glyphicon-user"></i> Share</button>
  </div>
  <div class="products">
    {{#each products }}
      {{> _product }}
    {{/each}}
  </div>
</div>
