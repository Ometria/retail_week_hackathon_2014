<div class="list-preview col-lg-3" data-navigate="/lists/{{ id }}">
  <div class="panel">
    <div class="panel-body">
      <p class="title">{{ title }}</p>
      {{#each products}}
        {{#if @first}}
          <div class="main-image">
            <img src="{{ image_url }}" alt="">
          </div>
          {{else}}
            <img src="{{ image_url }}" alt="" class="small">
        {{/if}}
      {{/each}}
    </div>
    <div class="panel-footer">
      <span class="metric">
        <i class="glyphicon glyphicon-shopping-cart"></i> {{ n_products }}
      </span>
      <span class="metric">
        <i class="glyphicon glyphicon-user"></i> {{ n_users }}
      </span>
    </div>
  </div>

</div>